{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "FLASK_ENV": "production"
  },
  "buildCommand": "chmod +x vercel-build.sh && ./vercel-build.sh"
}
